{
  "manifest_version": 3,
  "name": "Zero Bookmark Manager",
  "version": "1.0.3",
  "description": "A sleek and intuitive Chrome extension to manage bookmarks with search, sort, folder management, and export/import features.",
  "permissions": ["bookmarks", "storage"],
  "action": {
    "default_popup": "index.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "icons": {
    "128": "icons/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/*.ttf",
        "fonts/*.woff2",
        "images/*.png",
        "templates/template.html"
      ],

      "matches": ["<all_urls>"]
    }
  ]
}
